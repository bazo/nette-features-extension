<style>
    #nette-debug .nette-featuresPanel,
    #tracy-debug .nette-featuresPanel { min-width: 700px; }
    #nette-debug .nette-featuresPanel h2,
    #tracy-debug .nette-featuresPanel h2 { font-size: 22px; font-weight: bold; }
    #nette-debug .nette-featuresPanel small,
    #tracy-debug .nette-featuresPanel small { font-size: 70%; font-weight: normal; }
